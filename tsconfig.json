  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true,
  }
}
